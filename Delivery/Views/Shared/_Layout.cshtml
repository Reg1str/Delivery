<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <div>
        <nav>
            <a class="nav-main" asp-controller="Home" asp-action="Index">Orders list</a>
            @if (User.IsInRole("Admin"))
            {
                <a class="nav-main" asp-controller="AdminPanel" asp-action="Edit">New order</a>
                <a class="nav-main" asp-controller="AdminPanel" asp-action="Index">Orders Managment</a>
            }
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="sign-button" asp-controller="Auth" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="sign-button" asp-controller="Auth" asp-action="Login">Sign In</a>
                }
                </nav>  
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>